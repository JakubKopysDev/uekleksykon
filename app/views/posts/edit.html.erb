<div class="content_other">
  <div class="new_post">
    <%= form_for @post do |f| %>

      <div class="field">
      <%= f.label :title, "Tytuł" %><br>
      <%= f.text_field :title %>
      </div>

      <div class="field">
      <%= f.label :content, "Zawartość" %><br>
      <%= f.cktext_area :content, :class => 'ckeditor' %>
      </div>

      <%= f.submit "Edytuj" %>

    <% end %>
  </div>
</div>
